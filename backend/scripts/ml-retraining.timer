[Unit]
Description=ML Model Retraining Timer
Requires=ml-retraining.service

[Timer]
# Run daily at 2:00 AM
OnCalendar=*-*-* 02:00:00
# Run on boot if missed
Persistent=true
# Random delay up to 5 minutes to avoid all services starting at once
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
